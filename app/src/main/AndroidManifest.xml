<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tongmin.myanimotion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewAnimotionActivity"
            android:label="@string/title_activity_view_animotion"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LayoutAnimationActiivty"
            android:label="@string/title_activity_layout_animation_actiivty"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DrawableAnimationActivity"
            android:label="@string/title_activity_drawable_animation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ObjectAnimationActivity"
            android:label="@string/title_activity_object_animation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
